@page "/"

<PageTitle>Pulpa AI Bienes Raíces - Análisis Exhaustivo</PageTitle>

<div class="min-h-screen flex flex-col">

    <main class="flex-1" style="background-image:url(./img/landing_bg.jpg);background-repeat:no-repeat;background-size:cover;">
        <!-- Hero Section -->
        <section class="text-white overflow-hidden" style="height:calc(100vh - 41px)">
            <div class="max-w-7xl mx-auto px-4 py-20 sm:px-6 lg:px-8 flex flex-col items-center text-center">
                <div class="animate-fadeInUp">
                    <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold tracking-tight mb-6">
                        Intelligent Real Estate Analysis
                    </h1>
                </div>
                <div class="animate-fadeInUp animation-delay-200">
                    <p class="text-lg md:text-xl lg:text-2xl max-w-3xl mb-10 text-blue-100">
                        Unlock the potential of your real estate investments with our specialized AI agent. Get data-driven insights, accurate valuations, and maximize your returns.
                    </p>
                </div>
                <div id="start-analysis" class="mt-5 animate-fadeInUp animation-delay-400 text-white">
                    <a href="/chat" class="inline-flex items-center justify-center px-8 py-3 font-medium rounded-md text-white bg-purple-800 hover:bg-purple-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-indigo-900 focus:ring-blue-400 transition-all shadow-lg hover:shadow-xl transform hover:scale-109">
                        Start Analysis
                        <svg class="ml-2 -mr-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                        </svg>
                    </a>
                </div>

                
            </div>
        </section>

        <!-- Features Section -->
        <section id="features" class="py-16 lg:py-24 bg-gray-50">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="text-center">
                    <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl scroll-animate">
                        What Our AI Does
                    </h2>
                    <p class="mt-4 text-lg text-gray-600 max-w-2xl mx-auto scroll-animate animation-delay-200">
                        Our intelligent system processes thousands of data points to give you a competitive edge in the real estate market.
                    </p>
                </div>

                <div class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-8">
                    <!-- Feature 1 -->
                    <div class="p-6 bg-white rounded-xl shadow-lg hover:shadow-2xl transition-shadow duration-300 scroll-animate">
                        <div class="w-12 h-12 bg-blue-600 rounded-lg flex items-center justify-center mb-5 text-white">
                            <!-- Icon: Search/Analysis -->
                            <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"></path></svg>
                        </div>
                        <h3 class="text-xl font-semibold mb-2 text-gray-900">Deep Market Analysis</h3>
                        <p class="text-gray-600 leading-relaxed">
                            Comprehensive evaluation of trends, prices, and hidden opportunities in the current real estate market, powered by vast datasets.
                        </p>
                    </div>

                    <!-- Feature 2 -->
                    <div class="p-6 bg-white rounded-xl shadow-lg hover:shadow-2xl transition-shadow duration-300 scroll-animate animation-delay-200">
                        <div class="w-12 h-12 bg-blue-600 rounded-lg flex items-center justify-center mb-5 text-white">
                            <!-- Icon: Insights/Valuation -->
                            <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
                        </div>
                        <h3 class="text-xl font-semibold mb-2 text-gray-900">Predictive Insights</h3>
                        <p class="text-gray-600 leading-relaxed">
                            Accurate property value estimation using advanced AI algorithms and continuously updated comparative market data.
                        </p>
                    </div>

                    <!-- Feature 3 -->
                    <div class="p-6 bg-white rounded-xl shadow-lg hover:shadow-2xl transition-shadow duration-300 scroll-animate animation-delay-400">
                        <div class="w-12 h-12 bg-blue-600 rounded-lg flex items-center justify-center mb-5 text-white">
                            <!-- Icon: Growth/Investment -->
                            <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                        </div>
                        <h3 class="text-xl font-semibold mb-2 text-gray-900">Investment Potential</h3>
                        <p class="text-gray-600 leading-relaxed">
                            Data-driven profitability projections and risk analysis to maximize your real estate investment returns and identify growth areas.
                        </p>
                    </div>
                </div>

                <div class="mt-16 text-center scroll-animate">
                    <p class="text-xl text-gray-700 max-w-3xl mx-auto">
                        Our AI agent provides exhaustive real estate analysis to help you make informed decisions based on accurate and current data.
                    </p>
                    <div class="mt-8">
                        <a href="/how-it-works" class="text-blue-600 hover:text-blue-700 font-semibold inline-flex items-center text-lg group">
                            Explore All Features
                            <svg class="ml-2 w-5 h-5 transform group-hover:translate-x-1 transition-transform" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-gray-300 py-12">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <p class="text-lg font-semibold text-white">Trusted by Professionals & Homebuyers</p>
            <p class="mt-4">© <span id="footer-year">@DateTime.Today.Year</span> - Pulpa AI Real Estate - AI-powered real estate analysis.</p>
            <div class="mt-6 space-x-4 sm:space-x-6">
                <a href="/privacy" class="hover:text-blue-400 transition-colors text-sm sm:text-base">Privacy Policy</a>
                <a href="/terms" class="hover:text-blue-400 transition-colors text-sm sm:text-base">Terms of Service</a>
                <a href="/contact" class="hover:text-blue-400 transition-colors text-sm sm:text-base">Contact</a>
            </div>
        </div>
    </footer>

</div>


